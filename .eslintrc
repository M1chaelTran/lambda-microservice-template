{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "globals": {
    "Promise": true
  },
  "rules": {
    "no-console": 0,
    "comma-dangle": [
      2,
      "only-multiline"
    ],
    "no-unused-vars": 1,
    "no-redeclare": 1,
    "no-undef": 1,
    "no-unsafe-finally": 1
  },
  "ignore": ["*-compiled.js"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs"
  }
}
